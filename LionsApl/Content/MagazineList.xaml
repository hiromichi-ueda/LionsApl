<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LionsApl.Content.MagazineList">

    <!-- 
    +++++++++++++++++++++++++++++++++++++
    　画面名: 地区誌一覧画面
    +++++++++++++++++++++++++++++++++++++
    -->

    <ListView x:Name="LetterListView"
              CachingStrategy="RecycleElement">

        <ListView.Header>

            <!-- HEADER -->
            <StackLayout
                Margin="4"
                HorizontalOptions="FillAndExpand"
                >
                <!-- ログイン情報 -->
                <Label
                    Text="岐阜南LC 池田 昌二" 
                    FontSize="Caption"
                    TextColor="#2E2E2E"
                    VerticalOptions="Center"
                    Background="White"
                    HorizontalTextAlignment="End" 
                />
                <!-- タイトル -->
                <Label 
                    Text="地区誌"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center"
                    HorizontalTextAlignment="Center" 
                    TextColor="Black"
                    BackgroundColor="#81BEF7" 
                   />
            </StackLayout>

        </ListView.Header>

        <!-- LIST -->
        <ListView.ItemTemplate>

            <DataTemplate>
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- 地区誌名 -->
                        <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            Text="{Binding Magazine}" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                        <!-- 購入済み -->
                        <Label 
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            Text="{Binding MagazineBuy}" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                        <!-- マーク -->
                        <Label 
                            Grid.Column="2"
                            Grid.Row="0"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            VerticalOptions="Center"
                            Text="〉" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                    </Grid>
                </ViewCell>
            </DataTemplate>

        </ListView.ItemTemplate>

    </ListView>
</ContentPage>