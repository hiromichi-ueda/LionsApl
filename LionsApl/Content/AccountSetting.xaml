<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LionsApl.Content.AccountSetting">

    <!-- 
    +++++++++++++++++++++++++++++++++++++
    　画面名: アカウント設定画面
    +++++++++++++++++++++++++++++++++++++
    -->
    
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS" Value="0,40,0,0" />
            <On Platform="Android, UWP" Value="0,0,0,0" />
        </OnPlatform>
    </ContentPage.Padding>

    <ContentPage.Content>
        <StackLayout>

            <!-- APL HEADER -->
            <StackLayout
                HorizontalOptions="Fill"
                StyleClass="aplheaderbg"
                >
                <StackLayout 
                    Orientation="Horizontal" 
                    HorizontalOptions="Center"
                    VerticalOptions="CenterAndExpand"
                    StyleClass="aplhedaer"
                    >
                    <Image 
                        Source="icon_white.png"
                        />
                    <Label 
                        Text="Lions Apl"
                        VerticalOptions="Center"
                        />
                </StackLayout>
            </StackLayout>

            <!-- BODY -->
            <StackLayout>
                <ScrollView>
                    
                    <StackLayout>

                        <StackLayout 
                            Margin="10"
                            HorizontalOptions="FillAndExpand"
                            >

                        <!-- タイトル -->
                        <Label 
                            Text="アカウント設定"
                            Style="{StaticResource Title_Grey}"
                            />

                            <!-- 詳細 -->
                            <Grid Padding="0,20,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- リジョン -->
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    x:Name="lbl_region"
                                    Text ="リジョン"
                                    Style="{StaticResource Page_Base}"
                                    >
                                </Label>
                                <Picker 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    x:Name="RegionPicker"
                                    Title="リジョン選択"
                                    TitleColor="GRAY"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedIndexChanged="RegionPicker_SelectedIndexChanged"
                                    Style="{StaticResource Page_Picker}"
                                    >
                                </Picker>

                                <!-- ゾーン -->
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    x:Name="lbl_zone"
                                    Text="ゾーン"
                                    Style="{StaticResource Page_Base}"
                                    >
                                </Label>
                                <Picker 
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    x:Name="ZonePicker"
                                    Title="ゾーン選択"
                                    TitleColor="GRAY"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedIndexChanged="ZonePicker_SelectedIndexChanged"
                                    Style="{StaticResource Page_Picker}"
                                    >
                                </Picker>

                                <!-- クラブ -->
                                <Label 
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    x:Name="lbl_club"
                                    Text="クラブ"
                                    Style="{StaticResource Page_Base}"
                                    >
                                </Label>
                                <Picker 
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    x:Name="ClubPicker"
                                    Title="クラブ選択"
                                    TitleColor="GRAY"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedIndexChanged="ClubPicker_SelectedIndexChanged"
                                    Style="{StaticResource Page_Picker}"
                                        >
                                </Picker>

                                <!-- 会員名 -->
                                <Label 
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    x:Name="lbl_member"
                                    Text="会員名"
                                    Style="{StaticResource Page_Base}"
                                    >
                                </Label>
                                <Picker 
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    x:Name="MemberPicker"
                                    Title="会員選択"
                                    TitleColor="GRAY"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedIndexChanged="MemberPicker_SelectedIndexChanged"
                                    Style="{StaticResource Page_Picker}"
                                >
                                </Picker>
                            </Grid>

                            <!-- 各ボタン -->
                            <Grid  
                                HorizontalOptions="Fill" 
                                VerticalOptions="EndAndExpand" 
                                Margin="10"
                                >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                                <Button 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Text="戻　る" 
                                    Clicked="Button_Back_Clicked"
                                    >
                                </Button>
                                <Button 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Text="アカウント登録" 
                                    Clicked="Button_AccountSet_Clicked"
                                    >
                                </Button>
                            </Grid>

                        </StackLayout>

                    </StackLayout>

                </ScrollView>
            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>