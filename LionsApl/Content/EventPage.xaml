<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LionsApl.Content.EventPage">

    <!-- 
    +++++++++++++++++++++++++++++++++++++
    　画面名: 出欠確認画面
    +++++++++++++++++++++++++++++++++++++
    -->

    <ContentPage.Content>
        <StackLayout>

            <ScrollView>
                <StackLayout>

                    <!-- ログイン情報 -->
                    <StackLayout 
                        HeightRequest="18"
                        Margin="2"
                        >
                        <Label
                            x:Name="LoginInfo"
                            Style="{StaticResource Login}"
                            />
                    </StackLayout>

                    <!-- タイトル -->
                    <StackLayout 
                        Margin="4,0,4,0"
                        HorizontalOptions="FillAndExpand"
                        >
                        <Label 
                            Text="出欠確認"
                            Style="{StaticResource Title_Blue}"
                            />
                    </StackLayout>

                    <!-- BODY(出欠確認) -->
                    <StackLayout
                        x:Name="EventStackLayout"
                        >

                        <!-- 確認画面タイトル -->
                        <Label 
                            x:Name="BodyTitle"
                            Text=""
                            Style="{StaticResource Page_Base_Center}"
                            />
                        <!-- キャビネットイベント表示 -->
                        <StackLayout
                            x:Name="EventDspSL"
                            >
                        </StackLayout>

                        <!-- 年間例会スケジュール表示 -->
                        <StackLayout
                            x:Name="MeetingDspSL"
                            >
                            <Grid 
                                x:Name="DispGrid"
                                Style="{StaticResource ListGrid_Base}"
                                >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto" x:Name="rdh_MD_Online"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 例会日 -->
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MD_Date"
                                    Text="例会日"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Date"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />
                                <!-- 中止 -->
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Cancel"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />

                                <!-- 例会場所 -->
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MD_Place"
                                    Text="例会場所"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Place"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />

                                <!-- 例会回数 -->
                                <Label 
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MD_Count"
                                    Text="例会回数"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Count"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />

                                <!-- 例会名 -->
                                <Label 
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MD_Name"
                                    Text="例会名"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Name"
                                    Text="" 
                                    Style="{StaticResource Page_HeightFree}"
                                    />

                                <!-- 会議方法 -->
                                <Label 
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MD_Online"
                                    Text="会議方法"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Online"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />

                                <!-- お酒 -->
                                <Label 
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MD_Sake"
                                    Text="お酒"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="MD_Sake"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />
                            </Grid>
                        </StackLayout>

                        <!-- 理事・委員会表示 -->
                        <StackLayout
                            x:Name="DirectDspSL"
                            >
                            <Grid 
                                Style="{StaticResource ListGrid_Base}"
                                >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 開催日 -->
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_DD_Date"
                                    Text="開催日"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="DD_Date"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />
                                <!-- 中止 -->
                                <Label 
                                    Grid.Row="0"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="DD_Cancel"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />

                                <!-- 区分 -->
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_DD_Season"
                                    Text="区分"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="DD_Season"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />

                                <!-- 開催場所 -->
                                <Label 
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_DD_Place"
                                    Text="開催場所"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="DD_Place"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    />

                                <!-- 議題・内容 -->
                                <Label 
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_DD_Agenda"
                                    Text="議題・内容"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Label 
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="DD_Agenda"
                                    Text="" 
                                    Style="{StaticResource Page_HeightFree}"
                                    />

                                <!-- 回答期限 -->
                                <Label 
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_DD_AnsDate"
                                    Text="回答期限"
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />
                                <Label 
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="2"
                                    Grid.RowSpan="1"
                                    x:Name="DD_AnsDate"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />
                            </Grid>
                        </StackLayout>

                        <!-- キャビネットイベント入力 -->
                        <StackLayout
                            x:Name="EventInpSL"
                            >
                        </StackLayout>

                        <!-- 年間例会スケジュール入力 -->
                        <StackLayout
                            x:Name="MeetingInpSL"
                            >
                            <Grid 
                                Style="{StaticResource ListGrid_Base}"
                                >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto" x:Name="rw_Opt1"/>
                                    <RowDefinition Height="Auto" x:Name="rw_Opt2"/>
                                    <RowDefinition Height="Auto" x:Name="rw_Opt3"/>
                                    <RowDefinition Height="Auto" x:Name="rw_Opt4"/>
                                    <RowDefinition Height="Auto" x:Name="rw_Opt5"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <!-- アンダーライン -->
                                <BoxView 
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    Grid.RowSpan="1"
                                    Color="#E0E0E0" 
                                    HeightRequest="1" 
                                    Margin="4,0,4,0" 
                                    />
                                <!-- 入力部メッセージ -->
                                <Label 
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Header"
                                    Text="必要な項目を選択して、「出席・欠席」を選択してください"
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />
                                <!-- オプション1 -->
                                <Label 
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Opt1Name"
                                    Text=""
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Switch 
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Opt1Switch"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    />
                                <!-- オプション2 -->
                                <Label 
                                    Grid.Row="3"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Opt2Name"
                                    Text=""
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Switch 
                                    Grid.Row="3"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Opt2Switch"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    />
                                <!-- オプション3 -->
                                <Label 
                                    Grid.Row="4"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Opt3Name"
                                    Text=""
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Switch 
                                    Grid.Row="4"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Opt3Switch"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    />
                                <!-- オプション4 -->
                                <Label 
                                    Grid.Row="5"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Opt4Name"
                                    Text=""
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Switch 
                                    Grid.Row="5"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Opt4Switch"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    />
                                <!-- オプション5 -->
                                <Label 
                                    Grid.Row="6"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Opt5Name"
                                    Text=""
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Switch 
                                    Grid.Row="6"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Opt5Switch"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    />
                                <!--<RadioButton 
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1" 
                                    x:Name="rb_Opt1_1"
                                    Content="要" 
                                    GroupName="Opt1"
                                    Style="{StaticResource Page_Base}"
                                    VerticalOptions="Center"
                                    IsChecked="True"
                                    />
                                <RadioButton 
                                    Grid.Row="2"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="rb_Opt1_2"
                                    Content="不要" 
                                    GroupName="Opt1"
                                    Style="{StaticResource Page_Base}"
                                    VerticalOptions="Center"
                                    />-->
                                
                                <!-- 遅刻・早退 -->
                                <Label 
                                    Grid.Row="7"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_LateEarly"
                                    Text="遅刻・早退"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <CheckBox
                                    Grid.Row="7"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Late"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    />
                                <Label 
                                    Grid.Row="7"
                                    Grid.Column="2"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Late"
                                    Text="遅刻"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="Start"
                                    />
                                <CheckBox
                                    Grid.Row="7"
                                    Grid.Column="3"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="MI_Early"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    
                                    />
                                <Label 
                                    Grid.Row="7"
                                    Grid.Column="4"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_Early"
                                    Text="早退"
                                    HorizontalOptions="Start"
                                    VerticalOptions="Center"
                                    HorizontalTextAlignment="Start"
                                    />

                                <!-- 本人以外の参加数 -->
                                <Label 
                                    Grid.Row="8"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_OtherUser"
                                    Text="本人以外の参加数"
                                    Style="{StaticResource Page_Base}"
                                    />
                                <Picker 
                                    Grid.Row="8"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="MI_OtherUser"
                                    Style="{StaticResource Page_Base}"
                                    >
                                </Picker>
                                <!-- 回答期限 -->
                                <Label 
                                    Grid.Row="9"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="1"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_AnsDate"
                                    Text="回答期限"
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />
                                <Label 
                                    Grid.Row="9"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="4"
                                    Grid.RowSpan="1"
                                    x:Name="MI_AnsDate"
                                    Text="" 
                                    Style="{StaticResource Page_Base}"
                                    TextColor="Red"
                                    />

                                <!-- 説明 -->
                                <Label 
                                    Grid.Row="10"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="5"
                                    Grid.RowSpan="1"
                                    x:Name="lbl_MI_footer"
                                    Text="要（利用する）などはONにしてください。" 
                                    Style="{StaticResource Page_Base}"
                                    />

                            </Grid>
                        </StackLayout>
                    </StackLayout>

                </StackLayout>
            </ScrollView>

            <!-- 出欠ボタン -->
            <Grid  HorizontalOptions="Fill" 
                   VerticalOptions="EndAndExpand" 
                   Margin="10"
                   >
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <!-- 出席 -->
                <Button 
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="1"
                    Text="出席" 
                    BorderWidth="1" 
                    CornerRadius="6"
                    Clicked="Present_Button_Clicked"
                    >
                </Button>
                <!-- 欠席 -->
                <Button 
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.ColumnSpan="1"
                    Text="欠席" 
                    BorderWidth="1" 
                    CornerRadius="6"
                    Clicked="Adsent_Button_Clicked"
                    >
                </Button>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>