<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LionsApl.Content.ClubScheduleList">

    <!-- 
    ++++++++++++++++++++++++++++++++++++++++++
    　画面名: 年間例会スケジュール一覧画面
    ++++++++++++++++++++++++++++++++++++++++++
    -->
    
    <ContentPage.Content>
        <StackLayout>
            
            <ListView x:Name="LetterListView"
              CachingStrategy="RecycleElement">

                <ListView.Header>

                    <!-- HEADER -->
                    <StackLayout
                        Margin="4"
                        HorizontalOptions="FillAndExpand"
                        >
                        <!-- ログイン情報 -->
                        <Label
                            Text="岐阜南LC 池田 昌二" 
                            FontSize="Caption"
                            TextColor="#2E2E2E"
                            VerticalOptions="Center"
                            Background="White"
                            HorizontalTextAlignment="End" 
                        />
                        <!-- タイトル -->
                        <Label 
                            Text="キャビネットレター"
                            HorizontalOptions="Fill"
                            VerticalOptions="Center"
                            HorizontalTextAlignment="Center" 
                            TextColor="Black"
                            BackgroundColor="#E1F5A9" 
                           />
                    </StackLayout>

                </ListView.Header>

                <!-- LIST -->
                <ListView.ItemTemplate>

                    <DataTemplate>
                        <ViewCell>
                            <Grid>

                            </Grid>
                        </ViewCell>
                    </DataTemplate>

                </ListView.ItemTemplate>

            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>