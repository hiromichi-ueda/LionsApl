<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LionsApl.Content.MagazinePage">

    <!-- 
    +++++++++++++++++++++++++++++++++++++
    　画面名: 地区誌画面
    +++++++++++++++++++++++++++++++++++++
    -->
    
    <ContentPage.Content>

        <ScrollView>

            <StackLayout>

                <!-- ログイン情報 -->
                <StackLayout 
                    StyleClass="login"
                    >
                    <Label
                        x:Name="LoginInfo"
                        VerticalTextAlignment="Center"
                    />
                </StackLayout>

                <!-- タイトル -->
                <StackLayout 
                        Margin="4,0,4,0"
                        HorizontalOptions="FillAndExpand"
                        >
                    <Label 
                        x:Name="title"
                        Text="地区誌"
                        VerticalTextAlignment="Center"
                        StyleClass="title_blue"
                        />
                </StackLayout>

                <!-- BODY -->
                <Grid
                        Padding="10"
                        >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="400"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 画像 -->
                    <WebView
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        x:Name="Pdf">
                    </WebView>
                    <!--<Frame
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand"
                        x:Name="PdfFrame">
                    </Frame>-->
                    <Label 
                        Grid.Row="1"
                        Grid.Column="0"
                        Grid.ColumnSpan="1"
                        x:Name="PdfLabel" 
                        Text=""
                        TextColor="#2E2E2E"
                        VerticalOptions="Center" 
                        HorizontalTextAlignment="Start" 
                        Margin="8"
                        />
                </Grid>
                
            </StackLayout>

        </ScrollView>

    </ContentPage.Content>
    
</ContentPage>