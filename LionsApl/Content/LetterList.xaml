<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LionsApl.Content.LetterList">


    <!-- 
    +++++++++++++++++++++++++++++++++++++
    　画面名: キャビネットレター一覧画面
    +++++++++++++++++++++++++++++++++++++
    -->
    
    <ListView x:Name="LetterListView"
              ItemTapped="Handle_ItemTapped"
              CachingStrategy="RecycleElement">

        
        <ListView.Header>

            <!-- HEADER -->
            <StackLayout
                StyleClass="login"
                >
                <!-- ログイン情報 -->
                <Label
                    Text="岐阜南LC 池田 昌二" 
                    VerticalTextAlignment="Center"
                />
                <!-- タイトル -->
                <Label 
                    Text="キャビネットレター"
                    FontSize="Default"
                    VerticalTextAlignment="Center"
                    StyleClass="title_yellow"
                   />
            </StackLayout>
        
        </ListView.Header>

        <!-- BODY -->
        <ListView.ItemTemplate>
            
            <DataTemplate>
                <ViewCell>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <!-- 開催日 -->
                        <Label 
                            Grid.Column="0"
                            Grid.Row="0"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            Text="開催日" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                        <Label 
                            Grid.Column="1"
                            Grid.Row="0"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            Text="{Binding DateTime}" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                        <!-- 件名 -->
                        <Label 
                            Grid.Column="0"
                            Grid.Row="1"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            Text="件　名" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                        <Label 
                            Grid.Column="1"
                            Grid.Row="1"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="1"
                            Text="{Binding Title}" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                        <!-- マーク -->
                        <Label 
                            Grid.Column="2"
                            Grid.Row="0"
                            Grid.ColumnSpan="1"
                            Grid.RowSpan="2"
                            VerticalOptions="Center"
                            Text="〉" 
                            TextColor="#2E2E2E"
                            Margin="8, 0, 8, 0"
                            />
                    </Grid>
                </ViewCell>
            </DataTemplate>
            
        </ListView.ItemTemplate>

        <!--Custom View Cells-->
        <!--
        <ListView.ItemTemplate>
          <DataTemplate>
            <ViewCell>
              <StackLayout>
                <Label Text="{Binding Text}" 
                       Style="{DynamicResource ListItemTextStyle}" />
                <Label Text="{Binding Detail}" 
                       Style="{DynamicResource ListItemDetailTextStyle}"/>
              </StackLayout>
            </ViewCell>
          </DataTemplate>
        </ListView.ItemTemplate>
        -->
        
    </ListView>
</ContentPage>
